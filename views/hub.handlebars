<h1>Most Active</h1>
<div class="row">
<div class="col-12">
    <div class="table-responsive minimal-sort-table">
<table class="col-12 table table-sm table-dark stock-table" id="sortable-table">
<thead>
    <tr>
        <th>Symbol</th>
        <th>Name</th>
        <th>Price</th>
        <th>Change</th>
        <th>%change</th>
        <th>Volume</th>
        <th>P/E</th>
        <th>Market Cap</th>
    </tr>
</thead>

<tbody>
    {{#each stock}}
     <tr>
        <td>

                <form action="/" method="POST" class="inline">
                <input type="hidden" >
                <button type="submit" value="{{this.symbol}}" name="stock_search" class="link-button">
                   {{this.symbol}}
                </button>
                </form>

        </td>
        <td>{{this.companyName}}</td>
        <td>${{this.latestPrice}}</td>
        <td>{{#negPosChange this.change}}
             {{test}}
        {{/negPosChange}}</td>
        <td>{{#roundPercent this.changePercent}}
             {{test}}
        {{/roundPercent}}</td>
        <td>{{this.volume}}</td>
        <td>
            {{#if this.peRatio}}
            {{this.peRatio}}
            {{else}}
            <span class="na-value">N/A</span>
            {{/if}}
            
            </td>
        <td>{{this.marketCap}}</td>
    </tr>
    {{/each}}
</tbody>
    </table>

</div>
</div>
</div>

